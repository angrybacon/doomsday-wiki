{
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "preserve",
    "noEmit": true,
    "paths": {
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/theme/*": ["./theme/*"],
      "@/tools/*": ["./tools/*"]
    },
    "plugins": [{ "name": "next" }],
    "verbatimModuleSyntax": false
  },
  "exclude": ["node_modules"],
  "extends": "./node_modules/@korumite/ts/tsconfig.dom.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
